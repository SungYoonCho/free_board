<body>
  <br><h1>&nbsp;글쓰기</h1><br>
    <nav>
      <h3><span class="label label-success">접속 계정: <%= current_user.email %> &nbsp; <a href="/logout">Logout</a></span></h3>
    </nav>
  &nbsp;&nbsp;&nbsp;<a href="/"><button class="btn btn-default">Userpage</button></a>
  
  <div class="container">
    <form action="/question/create" method="POST">
      <div class="form-group">
        <input type="hidden" name="input_address" value="<%= current_user.email %>">
      </div>
      <div class="form-group">
        <label for="InputTitle1">Title</label>
        <input type="text" name="input_title" class="form-control" id="InputTitle1" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="InputName1">Name</label>
        <input type="text" name="input_name" class="form-control" id="InputName1" placeholder="Name">
      </div>
      <textarea name="input_content" class="form-control" rows="3" placeholder="Content"></textarea>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</body>

